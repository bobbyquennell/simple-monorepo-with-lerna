{
  /* Basic TS Config for tsc build in monoerepo root level,
   - can be extended from "packages/{packageA}/tsconfig.build.json"
   - can be extended from "root/tsconfig.json",
    where we put "paths" aliaes and other "compilerOptions" for test/IDE settings
   */
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "sourceMap": true
  },

  "exclude": [
    "node_modules",
    "dist"
  ]
}
